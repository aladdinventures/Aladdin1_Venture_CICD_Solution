# Application Settings
APP_NAME="YouTube Automation System"
APP_VERSION="3.0.0"
DEBUG=True
ENVIRONMENT=development

# Database Configuration
DB_USER=youtube_user
DB_PASSWORD=youtube_password
DB_NAME=youtube_automation
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://youtube_user:youtube_password@localhost:5432/youtube_automation
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=False

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# AI Provider Configuration
AI_PROVIDER=ollama
AI_MODEL=llama2
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_ORG_ID=

# DeepSeek Configuration
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Ollama Configuration (Self-Hosted, FREE!)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# TTS Provider Configuration
TTS_PROVIDER=gtts
TTS_VOICE=en-US-Standard-A

# Google Cloud TTS
GOOGLE_CREDENTIALS_PATH=
GOOGLE_PROJECT_ID=

# Coqui TTS (Self-Hosted, FREE!)
COQUI_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_PATH=/app/storage

# S3/MinIO Configuration
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=youtube-automation
S3_REGION=us-east-1
S3_USE_SSL=True

# YouTube API Configuration
YOUTUBE_CREDENTIALS_PATH=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_DEFAULT_CATEGORY=22
YOUTUBE_DEFAULT_PRIVACY=public

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# Video Generation Settings
VIDEO_DEFAULT_DURATION=300
VIDEO_DEFAULT_RESOLUTION=1920x1080
VIDEO_DEFAULT_FPS=24
VIDEO_DEFAULT_CODEC=libx264
VIDEO_DEFAULT_AUDIO_CODEC=aac
VIDEO_QUALITY=medium

# Content Generation Settings
CONTENT_DEFAULT_NICHE=technology
CONTENT_LANGUAGE=en
CONTENT_MIN_SCRIPT_LENGTH=500
CONTENT_MAX_SCRIPT_LENGTH=5000

# Automation Settings
AUTO_UPLOAD_ENABLED=False
AUTO_GENERATION_ENABLED=False
DAILY_GENERATION_TIME=09:00
MAX_VIDEOS_PER_DAY=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=youtube_automation.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALLOWED_HOSTS=*
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# File Upload Settings
MAX_UPLOAD_SIZE=524288000
ALLOWED_EXTENSIONS=.mp4,.avi,.mov,.mkv,.jpg,.png

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=True
METRICS_PORT=9090

# Feature Flags
FEATURE_MULTI_TENANCY=True
FEATURE_PLUGINS=True
FEATURE_ANALYTICS=True
FEATURE_WEBHOOKS=False

# Web Server
WEB_PORT=8000

